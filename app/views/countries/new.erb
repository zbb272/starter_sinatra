<h1>Create New Country</h1>

<br>

<form action="/countries" method="post">
  <label for="country_name">Name:</label>
  <input type="text" name="country[name]" id="country_name" value="">

  <label for="">Add Cities</label>
  <% @cities.each do | city |%>
  <input type="checkbox" name="country[city_ids][]" id="<%=city.id%>" value="<%=city.id%>"><%=city.name%></input>
  <%end%>

  <br>

  <h3>Or Create New Cities: </h3>
  <label for="city_name">Name for city: </label>
  <input type="text" name="city[name]" id="city_name" value="">
  <label for="city_name">Population of city: </label>
  <input type="text" name="city[population]" id="city_population" value="">

  <input type="submit" name="submit" value="Submit">

</form>
